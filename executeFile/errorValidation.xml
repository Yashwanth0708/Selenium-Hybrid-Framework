<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="AutomationTestSuite">

    <!-- Listeners must come first -->
    <listeners>
        <listener class-name="yashwanthgunapatiqa.testcomponents.Listeners"/>
    </listeners>

    <!-- Group definitions -->
    <test name="Error Handling Test">
        <groups>
            <run>
                <include name="ErrorHandling"/>
            </run>
        </groups>

        <!-- Test classes -->
        <classes>
            <class name="yashwanthgunapatiqa.tests.Errorvalidation"/>
        </classes>
    </test>

</suite>
